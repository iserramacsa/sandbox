#!/bin/sh

startMessages() {
	_MESSAGEFB_FIFO="${1:=/tmp/@APP_BIN@-fifo}"
	/usr/bin/@APP_BIN@ -d -f "${_MESSAGEFB_FIFO}"
}

sendMessageCommand() {
	echo "${@}" >> "${_MESSAGEFB_FIFO}"
}

stopMessages() {
	sendMessageCommand "q"
}

showMessage() {
	sendMessageCommand "d${@}"
}

setMessageColor() {
	sendMessageCommand "c${@}"
}

setMessageFont() {
	sendMessageCommand "f${@}"
}

setMessageFontHeight() {
	sendMessageCommand "h${@}"
}

clearMessage() {
	sendMessageCommand "z"
}
